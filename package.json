{
  "name": "bison-invoice-manager",
  "version": "2.1.0",
  "description": "Professional invoice management system with multi-marketplace support, advanced queue management, automated fiscal year organization, structured logging, and performance monitoring",
  "author": "Bison Management",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deal-detectives/amazon-invoice-extractor-pro.git"
  },
  "scripts": {
    "validate": "node scripts/validate.js",
    "package": "node scripts/package.js",
    "deploy": "npm run validate && npm run package && echo 'Extension ready for deployment in dist/'",
    "clean": "rm -rf dist/",
    "check-workflow": "node scripts/check-workflow.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "chrome-extension",
    "amazon",
    "invoice",
    "downloader",
    "automation",
    "business",
    "accounting",
    "multi-marketplace",
    "enterprise",
    "logging",
    "monitoring",
    "performance",
    "debugging"
  ],
  "manifest": {
    "version": "3",
    "permissions": [
      "storage",
      "downloads",
      "notifications",
      "identity",
      "tabs"
    ],
    "host_permissions": [
      "https://www.googleapis.com/*",
      "*://*.amazon.com/*",
      "*://*.amazon.de/*",
      "*://*.amazon.nl/*",
      "*://*.amazon.fr/*",
      "*://*.amazon.co.uk/*",
      "*://*.amazon.it/*",
      "*://*.amazon.es/*",
      "*://*.amazon.ca/*",
      "*://*.amazon.jp/*"
    ]
  }
}
